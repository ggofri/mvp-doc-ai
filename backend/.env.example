# Server Configuration
# Port for the backend server
PORT=3000
# Environment mode (development, production, test)
NODE_ENV=development

# Database Configuration
# Path to SQLite database file (relative to backend directory)
DATABASE_PATH=../data/db.sqlite

# Ollama LLM Configuration
# URL of your Ollama server (make sure Ollama is running locally)
OLLAMA_URL=http://localhost:11434
# Model to use for classification and extraction (recommended: llama3.2:3b, llama3.1:8b, or mistral)
OLLAMA_MODEL=llama3.2:3b

# CORS Configuration
# Frontend URL for CORS (must match where your frontend is running)
FRONTEND_URL=http://localhost:5173

# File Upload Configuration
# Directory to store uploaded documents (relative to backend directory)
UPLOAD_DIR=../uploads
# Maximum file size in MB
MAX_FILE_SIZE_MB=50
